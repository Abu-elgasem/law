<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="inherited_hr_employee_view_form" model="ir.ui.view">
        <field name="name">inherited hr employee</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
        <!-- find field description and add the field
             new_field after it -->
            <xpath expr="//field[@name='work_email']" position="after">
                <field name="ban"/>
                expr="//field[@name='coach_id']" position="after">
                <field name="practice_area_ids" widget="many2many_tags"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="action_create_lawyer_profile" string="Create Lawyer Profile"
                        type="object" class="oe_highlight" invisible="is_lawyer_created, '==', True"
                        />
            </xpath>
            <xpath expr="//field[@name='mobile_phone']" position="after">
               <field name="is_lawyer_created" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>
