<?xml version="1.0" encoding="UTF-8"?>
<odoo>


        <!-- Define the tree view for the lawyer model -->
        <record id="view_lawyer_tree" model="ir.ui.view">
            <field name="name">lawyer tree</field>
            <field name="model">lawyer</field>
            <field name="arch" type="xml">
                <tree string="Lawyer" sample="1">
                    <field name="name" readonly="1"/>
                    <field name="mobile" readonly="1"/>
                    <field name="email" readonly="1"/>
                    <field name="activity_ids" widget="list_activity" optional="show"/>
                    <field name="practice_area_ids"  string="Practice Area" widget="many2many_tags" readonly="1"/>
                </tree>
            </field>
        </record>

    <!-- Define the form view for the lawyer model -->
        <record id="view_lawyer_form" model="ir.ui.view">
            <field name="name">lawyer.form</field>
            <field name="model">lawyer</field>
            <field name="arch" type="xml">
                <form string="Lawyer" js_class="hr_employee_form">>
                    <sheet>
                        <field name="active" invisible="1"/>
                        <div class="row justify-content-between position-relative w-100 m-0 mb-2">
                            <div class="oe_title mw-75 ps-0 pe-2">
                                <h1 class="d-flex flex-row align-items-center">
                                    <field name="name" placeholder="Lawyer's Name" required="True" style="font-size: min(4vw, 2.6rem);"/>
                                </h1>
                            </div>
                            <div class="o_employee_avatar m-0 p-0">
                                <field name="image" widget="image" class="oe_avatar"/>
                            </div>
                        </div>
                        <group>
                            <group>
                                <field name="company_id" />
                                <field name="practice_area_ids" widget="many2many_tags"/>
                                <field name="email" widget="email"/>
                                <field name="mobile" widget="phone"/>
                            </group>
                            <group>
                                <field name="gender"/>
                                 <field name="birth_date"/>
                              </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>


    <!-- defintion kanban view to lawyer -->
    <record id="view_lawyer_kanban" model="ir.ui.view">
        <field name="name">lawyer kanban</field>
        <field name="model">lawyer</field>
        <field name="arch" type="xml">
            <kanban string="Lawyer"  class="o_hr_employee_kanban" sample="1">
                <field name="image"/>
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_kanban_record_has_image_fill o_hr_kanban_record">
                             <t>
                                 <field name="image" class="o_kanban_image_fill_left d-block" preview_image="image_128" widget="background_image" options="{'zoom': true, 'zoom_delay': 1000}"/>
                             </t>
                            <div class="o_kanban_record">
                                <div class="o_kanban_details">
                                     <strong class="o_kanban_record_title">
                                            <field name="name" placeholder="Employee's Name"/>
                                      </strong>
                                <div>
                                    <field name="mobile"/>
                                </div>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

     <record id="view_lawyer_search" model="ir.ui.view">
        <field name="name">lawyer search</field>
        <field name="model">lawyer</field>
        <field name="arch" type="xml">
            <search string="Search lawyer">
                <field name="name"/>
                <field name="mobile"/>
                <!-- أضف المزيد من الحقول حسب الحاجة -->
                <filter string="By Name" name="filter_by_name" domain="[('name', '!=', False)]"/>
                <filter string="By Mobile" name="filter_by_email" domain="[('mobile', '!=', False)]"/>
            </search>
        </field>
    </record>



    <!--create lawyer action -->
    <record id ="lawyer_action_view" model = "ir.actions.act_window">
        <field name = "name">Lawyer</field>
        <field name = "res_model">lawyer</field>
        <field name = "view_mode">kanban,search,tree,form</field>
        <field name="search_view_id" ref="view_lawyer_search"/>
    </record>

    <menuitem id="lawyer_action_menu"
              name="Lawyer" parent="lawyer_main_menu"
              action="lawyer_action_view" sequence="30"/>
</odoo>