<?xml version="1.0" encoding="UTF-8"?>
<odoo>


    <template id="report_lawyer_case_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h3>Lawyer Cases Report</h3>
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Case Name</th>
                                    <th>Practice Area</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="case">
                                    <tr>
                                        <td>
                                            <span t-esc="case.case_name"/>
                                        </td>
                                        <td>
                                            <span t-esc="case.case_type_id.name"/>
                                        </td>
                                        <td>
                                            <span t-esc="case.State"/>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>