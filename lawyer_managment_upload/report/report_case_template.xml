<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="report_case_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div>
                        <table class="table table-sm">
                            <thead>
                                <tr>
                                    <th>Case Name</th>
                                    <th>Lawyer</th>
                                    <th>Practice area</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="docs" t-as="doc">
                                    <tr>
                                        <td>
                                            <t t-if="doc.exists()">
                                                <t t-esc="doc.case_name"/>
                                            </t>
                                            <t t-else="">
                                                <span>Record does not exist.</span>
                                            </t>
                                        </td>
                                        <td>
                                             <t t-if="doc.exists()">
                                                 <t t-esc="doc.assigned_lawyer.name"/>
                                             </t>
                                             <t t-else="">
                                                <span>Record does not exist.</span>
                                            </t>
                                        </td>
                                        <td>
                                            <t t-if="doc.exists()">
                                                <t t-esc="doc.case_type_id.name"/>
                                            </t>
                                            <t t-else="">
                                                <span>Record does not exist.</span>
                                            </t>
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>