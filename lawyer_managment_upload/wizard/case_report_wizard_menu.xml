    <record id="action_report_case" model="ir.actions.report">
        <field name="name">Open case report</field>
        <field name="model">case</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">lawyer_managment.report_case_template</field>
    </record>


        <record id="action_case_report_wizard" model="ir.actions.act_window">
            <field name="name">Generate Open Case Report</field>
            <field name="res_model">case.report.wizard</field>
